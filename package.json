    "gray-matter": "^4.0.3",
    "lucide-react": "^0.294.0",
    "next": "14.0.3",
    "next-mdx-enhanced": "^5.0.0",
    "next-mdx-remote": "^4.4.1",
    "next-themes": "^0.2.1",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7"
