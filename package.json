    "autoprefixer": "^10.4.16",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "rss": "^1.2.2",
    "sitemap": "^7.1.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2"
  },
  "volta": {
    "node": "20.10.0"
